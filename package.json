{
  "name": "nexodo",
  "version": "1.0.0",
  "description": "Next-gen productivity software",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "start": "bun run dist/server.js",
    "build:frontend": "bun build src/frontend/main.ts --outdir ./public/js --minify",
    "build:all": "bun run build:frontend && bun run build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^3.10.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.2.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}