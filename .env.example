# Environment Variables for Local Development
# Copy this file to .env and fill in your actual values

# Database Configuration
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Option 2: Use individual variables (fallback)
# PGHOST=localhost
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=your_password
# PGDATABASE=your_database

# Authentication
APP_PASSWORD=your_secure_password
JWT_SECRET=your_jwt_secret_key_change_this

# Server Configuration
PORT=3000
NODE_ENV=development

# Google Drive Backup Configuration
# Service account JSON key (entire JSON as a single line string)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"your-service@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Optional: Specific Google Drive folder ID to upload backups to
# GOOGLE_DRIVE_FOLDER_ID=your_folder_id

# Optional: Timezone for backup schedule (default: UTC)
# BACKUP_TIMEZONE=America/New_York